<odoo>
    <data>

        <record id="employee_order_view_form" model="ir.ui.view">
            <field name="name">employee_order_view_form</field>
            <field name="model">employee.order</field>
            <field name="arch" type="xml">
                <form string="employee_order_form">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,done"/>
                        <button name="action_done" string="Lock" class="btn-primary" type="object" states="ready_to_pick"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object"  name="action_view_po"
                                class="oe_stat_button" string="PO"
                                icon="fa-pencil-square-o" attrs="{'invisible':['|', ('order_ids', '=', []), ('state', 'in', ('draft','approved','rejected'))]}">
                                <field name='order_ids' invisible="1"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="product_uom"/>
                                <field name="partner_id"/>
                                <field name="company_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="date_order"/>
                                <field name="price_unit"/>
                                <field name="product_qty"/>
                                <field name="price_subtotal"/>
                                <field name="price_tax"/>
                                <field name="price_total"/>
                                <field name="taxes_id" widget="many2many_tags"
                                       domain="[('type_tax_use','=','purchase'), ('company_id', '=', parent.company_id)]"
                                       context="{'default_type_tax_use': 'purchase', 'search_view_ref': 'account.account_tax_view_search'}"/>
                            </group>
                        </group>
                        <group>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <field name="attachment_counts" invisible="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="employee_order_view_tree" model="ir.ui.view">
            <field name="name">employee_order_view_tree</field>
            <field name="model">employee.order</field>
            <field name="arch" type="xml">
                <tree string="employee_order_tree">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="partner_id"/>
                    <field name="date_order"/>
                    <field name="price_unit"/>
                    <field name="product_qty"/>
                    <field name="taxes_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="employee_order_action" model="ir.actions.act_window">
            <field name="name">Employee Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="employee_order_config_view_form" model="ir.ui.view">
            <field name="name">employee_order_config_view_form</field>
            <field name="model">employee.order.config</field>
            <field name="arch" type="xml">
                <form string="employee_order_config_form">
                    <header>
                        <button name="action_confirm" states="draft" type="object" string="Set Configuration"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="categ_id"/>
                                <field name="company_id" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                                <field name="employee_parent_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="product_qty" default="3"/>
                                <field name="taxes_id" widget="many2many_tags"
                                       domain="[('type_tax_use','=','purchase'), ('company_id', '=', company_id)]"
                                       context="{'default_type_tax_use': 'purchase', 'search_view_ref': 'account.account_tax_view_search'}"
                                       options="{'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_order_config_view_tree" model="ir.ui.view">
            <field name="name">employee_order_config_view_tree</field>
            <field name="model">employee.order.config</field>
            <field name="arch" type="xml">
                <tree string="employee_order_config_tree">
                    <field name="employee_id"/>
                    <field name="categ_id"/>
                    <field name="product_qty"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="employee_order_config_action" model="ir.actions.act_window">
            <field name="name">Employee Configure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.order.config</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="menu_employee_order_root" name="Employee Order" sequence="10" web_icon="employee_order,static/description/icon.png"/>

        <!-- This Menu Item Must have a parent -->
        <menuitem id="menu_employee_order" name="Orders" parent="menu_employee_order_root" sequence="10"/>

        <!-- This Menu Item Must have a parent -->
        <menuitem id="menu_employee_order_config" name="Configuration" parent="menu_employee_order_root" sequence="20"/>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_employee_order_form" name="Orders" parent="menu_employee_order"
                  action="employee_order_action" sequence="10"/>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_employee_order_config_form" name="Employee Configure" parent="menu_employee_order_config"
                  action="employee_order_config_action" sequence="10"/>

    </data>
</odoo>
